---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import FancyParagraph from "../../components/Content/FancyParagraph.astro";
import More from "../../components/More.astro";
import TableOfContents from "../../components/TableOfContents/TableOfContents.astro";

export async function getStaticPaths() {
  const blogEntries = await getCollection("articles");
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();
const issue = await getCollection("issues", ({ data }) => {
  return data.issue_number === entry.data.issue_number;
});
---

<Layout
  issueSlug={`/issues/${issue[0].slug}`}
  title={entry.data.title}
  frontmatter={entry.data}
>
  <div class="grid grid-cols-12 gap-y-10 lg:gap-x-10 break-words hyphens-auto">
    <aside class="order-1 col-span-12 px-2 md:px-10 lg:hidden">
      <details class="group rounded-2xl border border-base-content/20 bg-base-100/70 p-4">
        <summary class="flex cursor-pointer items-center justify-between text-xs font-semibold uppercase tracking-[0.3em] text-base-content/70">
          Contents
          <span class="text-[0.65rem] font-normal tracking-normal text-base-content/50 group-open:hidden">Open</span>
          <span class="hidden text-[0.65rem] font-normal tracking-normal text-base-content/50 group-open:inline">Close</span>
        </summary>
        <div class="mt-4">
          <TableOfContents headings={headings} variant="minimal" title="Contents" />
        </div>
      </details>
    </aside>

    <div
      transition:name={entry.data.title}
      class="order-2 lg:order-1 col-span-12 lg:col-span-9 px-2 md:px-10 prose prose-xl"
    >
      <Content components={{ More: More, FancyParagraph }} />
    </div>

    <aside class="order-3 hidden px-2 lg:col-span-3 lg:block lg:sticky lg:top-24 h-fit">
      <TableOfContents headings={headings} />
    </aside>
  </div>
</Layout>

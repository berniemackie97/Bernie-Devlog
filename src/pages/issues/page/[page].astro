---
import { getCollection } from "astro:content";
import Layout from "../../../layouts/Layout.astro";
import romanize from "../../../utils/romanize";

export async function getStaticPaths({ paginate }: { paginate: any }) {
  const issues = await getCollection("issues");
  return paginate(
    issues.sort((a, b) => b.data.issue_number - a.data.issue_number),
    { pageSize: 6 },
  );
}

const { page, title }: { page: any; title: string } = Astro.props;
const issues = page.data;

const cards = await getCollection("cards");
const cardsByIssue = new Map(
  cards.map((card) => {
    const issuePath = card.data.issue_path ?? `/issues/${card.slug}`;
    const issueSlug = issuePath.replace(/^\/issues\//, "");
    return [issueSlug, card];
  }),
);
---

<Layout title={title} frontmatter={null}>
  <section class="px-3 sm:px-6 lg:px-10 pb-16 space-y-12">
    <header class="flex flex-wrap items-end justify-between gap-6">
      <div class="max-w-xl space-y-3">
        <p class="text-xs uppercase tracking-[0.4em] text-muted">Print queue</p>
        <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl leading-tight">
          Stacks fresh from the newsroom
        </h1>
        <p class="text-sm sm:text-base text-muted">
          Flip through active issues like a stack of weekend magazines. Every cover links to a full
          set of articles, lab notes, and release plans.
        </p>
      </div>

      <div class="flex flex-wrap items-center gap-3">
        <div class="join">
          {page.url.prev && (
            <a
              href={page.url.prev}
              class="join-item btn btn-sm sm:btn-md"
              aria-label="Previous page"
            >
              Prev
            </a>
          )}
          <span class="join-item btn btn-sm sm:btn-md">Page {page.currentPage}</span>
          {page.url.next && (
            <a
              href={page.url.next}
              class="join-item btn btn-sm sm:btn-md"
              aria-label="Next page"
            >
              Next
            </a>
          )}
        </div>
      </div>
    </header>

    <div class="grid gap-10 lg:grid-cols-[minmax(0,320px)_1fr]">
      <aside
        class="order-2 lg:order-1 space-y-6 border border-[color:var(--color-border)] backdrop-blur rounded-3xl p-6 lg:sticky lg:top-28"
        style="background: var(--surface-card); box-shadow: var(--shadow-card);"
      >
        <h2 class="font-display text-2xl">How to read</h2>
        <ol class="list-decimal pl-4 space-y-2 text-sm text-muted">
          <li>Pick an issue cover to open the table of contents.</li>
          <li>Use the roadmap inside each issue to follow the release cadence.</li>
          <li>Add interesting cards to your backlog with the CTA buttons.</li>
        </ol>
        <div class="rounded-2xl border border-dashed border-[color:var(--color-border)] p-4 text-xs uppercase tracking-[0.3em] text-muted">
          Fresh ink lands here first. Check back on Mondays for new drops.
        </div>
      </aside>

      <div class="order-1 lg:order-2 space-y-10">
        {issues.map((issue: any, index: number) => {
          const paletteIndex = index % 4;
          const rotation = index % 2 === 0 ? "lg:-rotate-1" : "lg:rotate-1";
          const linkedCard = cardsByIssue.get(issue.slug);
          const cardHref = linkedCard
            ? linkedCard.data.card_path ?? `/cards/${linkedCard.slug}`
            : null;

          const styleVars = `--stack-gradient-current: var(--stack-gradient-${paletteIndex}); --stack-spine-current: var(--stack-spine-${paletteIndex});`;

          return (
            <article
              style={styleVars}
              class={`stack-card group relative isolate overflow-hidden rounded-[28px] border border-[color:var(--color-border)] px-6 py-8 sm:px-8 sm:py-12 transition-all duration-500 ${rotation}`}
            >
              <span
                class="stack-overlay pointer-events-none absolute inset-[-18px] rounded-[32px] opacity-80"
                aria-hidden="true"
              ></span>
              <span
                class="stack-spine pointer-events-none absolute -left-6 top-0 h-full w-4 rounded-sm opacity-80"
                aria-hidden="true"
              ></span>
              <span
                class="pointer-events-none absolute right-10 top-10 hidden h-16 w-16 border border-dashed border-[color:var(--color-border)] md:block"
                aria-hidden="true"
              ></span>

              <div class="relative space-y-6">
                <header class="flex flex-wrap items-start justify-between gap-6">
                  <div class="space-y-2 max-w-xl">
                    <span class="text-xs font-semibold uppercase tracking-[0.4em] text-muted">
                      Issue {issue.data.issue_number}
                    </span>
                    <h2 class="font-display text-2xl sm:text-3xl lg:text-4xl">
                      {issue.data.title}
                    </h2>
                  </div>
                  <span
                    transition:animate="fade"
                    transition:name={`issue_number_${issue.data.issue_number}`}
                    class="font-lithops text-6xl sm:text-7xl lg:text-8xl text-plum"
                  >
                    {romanize(issue.data.issue_number)}
                  </span>
                </header>

                <p class="max-w-2xl text-muted">
                  {issue.data.description}
                </p>

                <div class="flex flex-wrap items-center gap-4 text-xs uppercase tracking-[0.3em] text-muted">
                  <span class="inline-flex items-center gap-2">
                    <span class="h-2 w-2 rounded-full bg-plum/80"></span>
                    Active articles
                  </span>
                  <span class="inline-flex items-center gap-2">
                    <span class="h-2 w-2 rounded-full bg-lavender/80"></span>
                    Progressive release
                  </span>
                  <span class="inline-flex items-center gap-2">
                    <span class="h-2 w-2 rounded-full bg-olive/70"></span>
                    Roadmap inside
                  </span>
                </div>

                <footer class="flex flex-wrap items-center gap-3">
                  <a class="btn btn-primary" href={`/issues/${issue.slug}`}>
                    Open the issue
                  </a>
                  {cardHref && (
                    <a class="btn btn-outline" href={cardHref}>
                      View the issue card
                    </a>
                  )}
                </footer>
              </div>
            </article>
          );
        })}
      </div>
    </div>
  </section>
</Layout>
